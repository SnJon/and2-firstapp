<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/like_checkbox_tint</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.ShareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.PlayButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">@dimen/icon_size_24</item>
    </style>

    <style name="Widget.AppTheme.ViewText" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>